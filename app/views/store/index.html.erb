<h1><%= @header %> | Find the best clothes!</h1>

<br/>

<%= form_tag("/store/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>


<br/><br/><br/>

<h1>Listing Clothing Types</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @clothing_types.each do |clothing_type| %>
      <tr>
        <td><%= clothing_type.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h1>Listing Brands</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
