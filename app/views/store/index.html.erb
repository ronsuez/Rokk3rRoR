<h1><%= @header %></h1>
<h1>Find the best clothings!</h1>

<%= form_tag("/store/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>


<p>Find me in app/views/store/index.html.erb</p>

<h1>Listing Clothing Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clothing_types.each do |clothing_type| %>
      <tr>
        <td><%= clothing_type.name %></td>
        <td><%= link_to 'Show', clothing_type %></td>
        <td><%= link_to 'Edit', edit_clothing_type_path(clothing_type) %></td>
        <td><%= link_to 'Destroy', clothing_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h1>Listing Brands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= link_to 'Show', brand %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
